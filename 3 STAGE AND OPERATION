if choice==1:
 print("Performing Addition...")
 res=a+b
 counter=counter+1
if choice==2:
 print("Performing Subtraction...")
 res=a-b
 counter=counter+1
if choice==3:
 print("Performing Multiplication")
 res=a*b
 counter=counter+1
if choice==4:
 print("performing division")
 res=a/b
 counter+=1
if b==0:
 print("Denominator can't be Zero")
 print("Performing Division")
 res=a/b
 counter=counter+1
if choice>=5:
 print("Enter Correct Input")
print(res)
counter=counter+3
print("CYCLE VALUE IS:",counter)
